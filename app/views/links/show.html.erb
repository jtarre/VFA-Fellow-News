<h2>Discussion Thread</h2>
<h3><%= @link.title %></h3>
<p><%= @link.description%> </p>

<h2>Comments</h2>
  <% @link.comments.each do |comment| %>
<div>
	<% if comment.is_root? %>
	<%= nested_comments comment.subtree.arrange(:order => :created_at) %>
    <% end %>
   <% end %>
</div>

<%= render 'links/comment' %>
